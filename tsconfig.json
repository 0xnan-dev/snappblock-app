{
  "extends": "expo/tsconfig.base",
  "isolatedModules": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": false,
    "types": [
      "jest"
    ],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "types/*.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*.web",
        "*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}